# Database Configuration  
DATABASE_URL=postgres://goaltracker:password@postgres:5432/goaltracker
POSTGRES_USER=goaltracker
POSTGRES_PASSWORD=password
POSTGRES_DB=goaltracker

# API Configuration
API_PORT=8080
GIN_MODE=debug
FRONTEND_URL=http://localhost:3000

# LLM/AI Configuration (Choose ONE)

# Option 1: OpenAI (Recommended for production)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o  # or gpt-4, gpt-3.5-turbo

# Option 2: Anthropic Claude (Best for reasoning)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Option 3: Google Gemini (Large context)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# Option 4: Local LLM (Privacy-focused, no API costs)
LOCAL_LLM_URL=http://localhost:11434  # Ollama default
LOCAL_LLM_MODEL=llama3.1:8b  # or mistral:7b, codellama:7b

# Market Data APIs (Optional - for real-time trends)
INDEED_API_KEY=your-indeed-key
LINKEDIN_API_KEY=your-linkedin-key
GLASSDOOR_API_KEY=your-glassdoor-key

# Feature Flags
ENABLE_REAL_LLM=true          # Set to false to use rule-based AI
ENABLE_MARKET_ANALYSIS=true   # Real-time job market data
ENABLE_PROGRESS_AI=true       # AI-powered progress insights
FALLBACK_TO_RULES=true        # Fallback if LLM fails